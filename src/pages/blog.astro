---
import { getCollection } from 'astro:content';
import BlogPost from '../components/BlogPost.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css'

const allPosts = await getCollection("posts")
const pageTitle = "Blog Astro";
const title = "Mi blog de Astro aprendizaje";

---

<BaseLayout pageTitle={pageTitle} title={title}>
	<p>Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.</p>
	<ul>
		{allPosts.map((post) => <BlogPost url={`/posts/${post.slug}`} title={post.data.title}/>)}
	</ul>
</BaseLayout>

